<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!-- 서블릿 등록 : 스프링이 제공하는 서블릿 구현체 DispatcherServlet -->
    <servlet>
        <servlet-name>app</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <!-- 이때 파라미터를 등록할 수 있다 -->
        <init-param>
            <!-- contextClass : ConfigurableWebApplicationContext 타입의 ApplicationContext를 지정, XmlWebApplicationContext(default) -->
            <param-name>contextClass</param-name>
            <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
        </init-param>
        <init-param>
            <!-- contextConfigLocation : DispatcherServlet이 사용할 설정 파일 위치 -->
            <param-name>contextConfigLocation</param-name>
            <param-value>me.frenchline.WebConfig</param-value>
        </init-param>
    </servlet>

    <!-- 서블릿 매핑 -->
    <servlet-mapping>
        <servlet-name>app</servlet-name>
        <url-pattern>/app/*</url-pattern>
    </servlet-mapping>

</web-app>
